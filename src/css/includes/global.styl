html {
  height: 100%
  font-size: 62.5%
}

body {
  margin: 0
  font-family: 'Open Sans'
  font-size: 1.4rem
  background-color: #fff
  height: 100%
}

h1, h2, h3, h4, h5, h6 {
  margin: 0
  font-weight: 400
}

h1 {
  font-size: 3rem
}

h2 {
  font-size: 2.2rem
}

h3 {
  font-size: 1.5rem
}

h4 {
  font-size: 1.3rem
}

main {
  padding: 0rem;
}

input {
  box-sizing: border-box
  padding-left: 1rem
  height: 6rem
  background-color: white
  outline: 0
  border: .1rem solid #ccc
  margin: 1rem
  font-family: 'Open Sans'
  font-size: 1.7rem
  font-weight: 200

  &[type="submit"] {
    background-color: primary
    border: 0
    color: white
    font-weight: 200
    padding: 1rem 3rem
    cursor: pointer
    transition: .2s

    &:hover {
      background-color: lighten(primary, 10%)
    }
  }
}

.site-width {
  max-width: 100rem
  padding: 0 2rem
  margin: 0 auto
}

.hidden {
  display: none
}
